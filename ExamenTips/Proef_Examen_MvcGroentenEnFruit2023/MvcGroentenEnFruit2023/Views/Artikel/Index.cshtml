@model IEnumerable<MvcGroentenEnFruit2023.Models.Artikel>

@{
    ViewData["Title"] = "Index";
}

<h1>Artikels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArtikelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtikelNaam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtikelId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtikelNaam)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ArtikelId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
