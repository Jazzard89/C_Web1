@model IEnumerable<MvcGroentenEnFruit2023.Models.AankoopOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AankoopOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AankoopDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AankoopOrderId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.AankoopDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUserId)
            </td>
                @if (item.Status == 0)
                {
                    <td>
                        Nieuwe Order
                    </td>
                }
                else
                {
                    <td>
                        afgeronde order
                    </td>
                    
                
                }

                
            <td>
                <a asp-action="Edit" asp-route-id="@item.AankoopOrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AankoopOrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AankoopOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
