@model IdentityViewModel

<br/>
<a class="btn btn-block link-dark border-success" asp-controller="Account" asp-action="CreateRole">Create role</a>
<br/>
@if(Model.Roles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    RoleName
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model.Roles)
            {
                <tr>
                    <td>
                        @role.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br/>
    <table class="table table-sm table-bordered table-bordered">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Users
            </th>
        </tr>

        @foreach(var role in Model.Roles)
        {
            <tr>
                <td>
                    @role.Id
                </td>
                <td>
                    @role.Name
                </td>
                <td>
                    <tdd role="@role.Id"></tdd>
                </td>
                
            </tr>
        }
    </table>
}