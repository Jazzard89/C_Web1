@using Slide5.Data;
@model IEnumerable<Gast>
@{
    ViewData["Title"] = "Home Page";

    var Nlst = LocalData.Gastlijst
    .Where(x => x.Aanwezig == false).Select(y => $"({y.Naam} - {y.Email} - {y.Telefoon}").ToList();

    var lst = LocalData.Gastlijst
    .Where(x => x.Aanwezig == true).Select(y => $"({y.Naam} - {y.Email} - {y.Telefoon}").ToList();
}

<div class="text-center">
    <p>Welkom op de registratie pagina van PXL</p>
    <br/>
    <a asp-controller="Gast" asp-action="Index">Schrijf je hier in!</a>
    <br/>
    @if (Model.Count() > 0)
    {
        <table>
            <tr>
                <th class="font-weight-bold">Aanwezig</th>
            </tr>
            @foreach (var s in lst)
            {
                <tr><td>@s</td></tr>
            }
        </table>
        <br/>
        <table>
            <tr>
                <th class="font-weight-bold">Afwezig</th>
            </tr>
            @foreach (var not in Nlst)
            {
                <tr><td>@not</td></tr>
            }
            
        </table>
    }
</div>
