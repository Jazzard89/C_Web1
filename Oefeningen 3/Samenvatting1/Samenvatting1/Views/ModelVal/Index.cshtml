@model IEnumerable<ModelValClass>
@{

}

<a asp-action="Form" asp-area="" asp-controller="ModelVal">Add</a>
<table>
    <table>
        <div asp-validation-summary="All" class="text-danger"></div>
        <thead>
            <tr>
                <th><label for="Number">Number</label></th>
                <th><label for="Name">Name</label></th>
                <th><label for="Date">Date</label></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelClass in Model)
            {
                <tr>
                    <th><label for="Number">@modelClass.Number</label></th>
                    <th><label for="Name">@modelClass.Name</label></th>
                    <th><label for="Date">@modelClass.Date</label></th>
                </tr>
            }
            <tr>
                <th><input type="submit" value="submit" /></th>
            </tr>
        </tbody>
    </table>
</table>