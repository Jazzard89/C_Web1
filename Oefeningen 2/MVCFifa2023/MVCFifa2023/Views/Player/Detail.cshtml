@{
    ViewData["Title"] = "Detail";
    var fileExist = Convert.ToBoolean(ViewBag.FileExist);
    var imgLink = "";
    if (fileExist)
    {
        imgLink = $"/images/{Model.ImageLink}";
    }
}

<h1>Detail</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        @if (fileExist)
        {
            <img src="@imgLink" style="width:350px;"/>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PlayerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
