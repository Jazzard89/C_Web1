@model MVCFifa2023.Models.TeamPlayer

@{
    ViewData["Title"] = "Create";
    var playerlst = new List<SelectListItem>();
    foreach (var item in ViewBag.Players)
    {
        playerlst.Add(new SelectListItem { Text = $"{item.FirstName} {item.LastName}", Value = item.PlayerId.ToString() });
    }
    var teamlst = new List<SelectListItem>();
    foreach (var item in ViewBag.Teams)
    {
        teamlst.Add(new SelectListItem { Text = item.TeamName, Value = item.TeamId.ToString() });
    }
}

<h1>Create</h1>

<h4>TeamPlayer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" asp-items="teamlst" class="form-control"></select>
                @* <input asp-for="TeamId" class="form-control" />
                <span asp-validation-for="TeamId" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" asp-items="playerlst" class="form-control"></select>
@*                 <input asp-for="PlayerId" class="form-control" />
                <span asp-validation-for="PlayerId" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
