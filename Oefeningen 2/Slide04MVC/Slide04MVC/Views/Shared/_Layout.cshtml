<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Slide04MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Slide04MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div>
            <h2>Header title</h2>
        </div>
    </header>
    <div class="row m-1 p-1">
        <div id="menu" class="col-3 border border-primary" style="display:flex; flex-direction:column;">
            <a asp-action="index" asp-controller="Home">Home</a>
            <br/>
            <a asp-action="index" asp-controller="Test">Test</a>
            <br/>
            <a asp-action="TestViewBag" asp-controller="Test">TestViewBag</a>
            <br/>
            <a asp-action="Formulier" asp-controller="Test">Formulier</a>
        </div>
        <div id="main" class="col-9 border border-primary">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Footer - @DateTime.Now.ToString("dd/MM/yyyy")
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
