@page
@model RazorWebAppClient.Pages.LocatiesModel
@{
    var locaties = RazorWebAppClient.Data.Databank.Locaties;
    var rowId = 0;
}
<div class="text-center">
    <h1 class="display-4">Locaties</h1>
    <a asp-page="NieuweLocatie">Nieuwe locatie</a>
    <p>Dit is onze locaties razor page</p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">LocatieId</th>
                <th scope="col">Postcode</th>
                <th scope="col">Gemeente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var locatie in locaties)
            {
                rowId++;
                <tr>
                    <th scope="row">@rowId</th>
                    <td>@locatie.LocatieID</td>
                    <td>@locatie.Postcode</td>
                    <td>@locatie.Gemeente</td>
                </tr>
            }
        </tbody>
    </table>
</div>
